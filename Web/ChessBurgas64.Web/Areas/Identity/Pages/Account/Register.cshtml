@page
@using ChessBurgas64.Common
@using ChessBurgas64.Data.Models.Enums
@model RegisterModel
@{
    ViewData["Title"] = GlobalConstants.RegistrationLabel;
}

<div class="row">
    <div class="col-md-5 justify-content-center text-white">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="text-center text-white">@GlobalConstants.RegistrationLabel</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Input.MiddleName"></label>
                <input asp-for="Input.MiddleName" class="form-control" />
                <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Input.BirthDate"></label>
                <input asp-for="Input.BirthDate" class="form-control" />
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            @Html.DisplayNameFor(m => m.Input.Gender):
            <div class="form-check form-check-inline m-3">
                <input class="form-check-input" type="radio" asp-for="Input.Gender" id="inlineRadio1" value="@Gender.Женски.ToString()">
                <label class="form-check-label" asp-for="Input.Gender">@Gender.Женски.ToString()</label>
            </div>
            <div class="form-check form-check-inline m-3">
                <input class="form-check-input" type="radio" asp-for="Input.Gender" id="inlineRadio1" value="@Gender.Мъжки.ToString()">
                <label class="form-check-label" asp-for="Input.Gender">@Gender.Мъжки.ToString()</label>
            </div>
            <div class="form-group my-3">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@GlobalConstants.RegistrationLabel</button>
        </form>
    </div>
    <div class="col-md-6 my-lg-5">
        <img class="rounded mx-auto d-block mb-5" src="~/images/homePage/burgas64-logo.png" style="height: 730px; width: 730px;" alt="" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
