@using ChessBurgas64.Common
@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<h2 class="text-white text-center">@GlobalConstants.ProfileManagementTitle</h2>
<hr class="text-white"/>

<div>
    <h4 class="text-white text-center">@GlobalConstants.ProfileManagementSubtitle</h4>
    <hr class="text-white"/>
    <div class="row">
        <div class="col-md-2">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-10">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
