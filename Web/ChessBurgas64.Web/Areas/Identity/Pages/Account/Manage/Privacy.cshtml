@page
@using ChessBurgas64.Common
@model Privacy
@{
    ViewData["Title"] = GlobalConstants.PersonalDataPolicyTitle;
    ViewData["ActivePage"] = ManageNavPages.Privacy;
}

<h4 class="display-6 text-white text-center mt-3">@ViewData["Title"]</h4>
<hr class="border border-5 border-white text-white" />

<div class="row justify-content-center">
    <p class="text-white text-justify my-3">@GlobalConstants.PersonalDataPolicyInfo</p>
    <h5 class="text-white text-center text-decoration-underline mt-4">@GlobalConstants.ForWhatDoWeUseYourData</h5>
    <div id="accordion" class="col-md-10">
        <div class="card">
            <div class="card-header background-dragon-red border border-1 border-white" id="headingOne">
                <h5 class="mb-0 text-center">
                    <button class="btn btn-link btn-primary" id="accordionBtn" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        @GlobalConstants.BirthDate
                    </button>
                </h5>
            </div>

            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body">
                    @GlobalConstants.BirthDateDataUsageInfo
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header background-dragon-red border border-1 border-white" id="headingTwo">
                <h5 class="mb-0 text-center">
                    <button class="btn btn-link btn-primary" id="accordionBtn" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        @GlobalConstants.School
                    </button>
                </h5>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                <div class="card-body">
                    @GlobalConstants.SchoolDataUsageInfo
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header background-dragon-red border border-1 border-white" id="headingThree">
                <h5 class="mb-0 text-center">
                    <button class="btn btn-link collapsed btn-primary" id="accordionBtn" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        @GlobalConstants.Address
                    </button>
                </h5>
            </div>
            <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
                <div class="card-body">
                   @GlobalConstants.AddressDataUsageInfo
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row text-center">
    <div class="col-md-12 text-white">
        <p class="my-3"><strong>@GlobalConstants.PersonalDataDeleteWarning</strong></p>
        <ul>
            <li>
                <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
                    <button class="btn btn-primary mb-2" type="submit">@GlobalConstants.DownloadPersonalData</button>
                </form>
            </li>
            <li>
                <p>
                    <a id="delete" asp-page="DeletePersonalData" class="btn btn-warning">@GlobalConstants.DeleteAccount</a>
                </p>
            </li>
        </ul>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
