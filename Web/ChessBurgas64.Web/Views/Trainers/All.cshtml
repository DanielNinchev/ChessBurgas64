<div class="container-xxl">
    @foreach (var trainer in this.Model.Trainers)
    {
        <div class="row wow fadeInUp my-5" data-wow-delay="0.1s">
            <div class="col-md-4 justify-content-center text-center">
                <img class=".image-clubPlayer img-fluid rounded-circle border border-5 border-secondary" src="@trainer.ImageImageUrl" alt="">
                <h4 class="fw-bold text-center text-white my-3">@(trainer.User.FideTitle != FideTitle.Няма.ToString() ? trainer.User.FideTitle : String.Empty) @trainer.TrainerName</h4>
    
                @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                {
                    <form method="post" class="text-center my-2" asp-action="Delete" id="deleteForm_@trainer.Id" asp-route-id="@trainer.Id">
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@trainer.Id">@GlobalConstants.Edit</a>
                        <button class="btn btn-danger" type="button" id="delete_@trainer.Id" data-bs-toggle="modal" data-bs-target="#deleteModal_@trainer.Id">@GlobalConstants.Delete</button>
                    </form>
                    <partial name="_DeleteModalPartial" model="@trainer" />
                }
            </div>
            <div class="container-fluid col-md-8 text-justify text-white">
                <p>@Html.Raw(trainer.UserDescription)</p>
            </div>
            <hr class="text-white"/>
        </div>
    }
</div>
