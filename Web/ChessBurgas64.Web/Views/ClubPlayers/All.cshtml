@model ChessBurgas64.Web.ViewModels.ClubPlayers.ClubPlayersListViewModel
@using ChessBurgas64.Common
@using ChessBurgas64.Data.Models.Enums
@{
    this.ViewData["Title"] = GlobalConstants.ClubPlayers;
}

<partial name="_PageHeaderContainerPartial" />

<div class="container-xxl">
    @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
    {
        <div class="text-center my-5">
            <a asp-action="Create" class="btn btn-primary"> @GlobalConstants.Add</a>
        </div>
        <hr class="text-white"/>
    }
    @foreach (var clubPlayer in this.Model.ClubPlayers)
    {
        <div class="row wow fadeInUp my-5" data-wow-delay="0.1s">
            <div class="col-md-4 justify-content-center text-center">
                <img class=".image-clubPlayer img-fluid rounded-circle border border-5 border-secondary" src="@clubPlayer.ImageImageUrl" alt="">
                <h4 class="fw-bold text-center text-white my-3">@(clubPlayer.FideTitle != FideTitle.Няма.ToString() ? clubPlayer.FideTitle : String.Empty) @clubPlayer.Name</h4>
    
                @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                {
                    <form method="post" class="text-center my-2" asp-action="Delete" id="deleteForm_@clubPlayer.Id" asp-route-id="@clubPlayer.Id">
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@clubPlayer.Id">@GlobalConstants.Edit</a>
                        <button class="btn btn-danger" type="button" id="delete_@clubPlayer.Id" data-bs-toggle="modal" data-bs-target="#deleteModal_@clubPlayer.Id">@GlobalConstants.Delete</button>
                    </form>
                    <partial name="_DeleteModalPartial" model="@clubPlayer" />
                }
            </div>
            <div class="container-fluid col-md-8 text-justify text-white">
                <p>@Html.Raw(clubPlayer.Description)</p>
            </div>
            <hr class="text-white"/>
        </div>
    }
</div>
