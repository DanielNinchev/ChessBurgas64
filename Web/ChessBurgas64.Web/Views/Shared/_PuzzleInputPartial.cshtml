@model ChessBurgas64.Web.ViewModels.Puzzles.PuzzleInputModel
@using ChessBurgas64.Common
@using ChessBurgas64.Data.Models.Enums 

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group mb-3">
    <label class="text-white" asp-for="Number">@GlobalConstants.Number*</label>
    <input asp-for="Number" class="form-control" />
    <span asp-validation-for="Number" class="text-danger"></span>
</div>
<div class="form-group mb-3">
    <label class="text-white" asp-for="Objective">@GlobalConstants.Objective*</label>
    <input asp-for="Objective" class="form-control" />
    <span asp-validation-for="Objective" class="text-danger"></span>
</div>
<div class="form-group mb-3">
    <label class="text-white" asp-for="Solution">@GlobalConstants.Solution*</label>
    <input asp-for="Solution" class="form-control" />
    <span asp-validation-for="Solution" class="text-danger"></span>
</div>
<vc:categories title="PuzzleCategory"></vc:categories>
<div class="form-group my-3">
    <label class="text-white" asp-for="Difficulty">@GlobalConstants.Difficulty*: </label>
    <select asp-for="Difficulty" asp-items="Html.GetEnumSelectList<PuzzleDifficulty>()">
        <option selected="selected" value="">@GlobalConstants.DifficultyChoice</option>
    </select>
    <span asp-validation-for="Difficulty" class="text-danger"></span>
</div>
<div class="form-group my-3">
    <label class="text-white" asp-for="PositionImage">@GlobalConstants.PositionImage*</label>
    <input asp-for="PositionImage" class="form-control" />
    <span asp-validation-for="PositionImage" class="text-danger"></span>
</div>