@model ChessBurgas64.Web.ViewModels.IdHoldingModel
@using ChessBurgas64.Common

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal_@Model.Id">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>@GlobalConstants.AreYouSureYouWantToDeleteThis</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="document.getElementById('deleteForm_@Model.Id').submit()">@GlobalConstants.Yes</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@GlobalConstants.No</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function Delete() {
            event.target.submit()
        }
    </script>
}

