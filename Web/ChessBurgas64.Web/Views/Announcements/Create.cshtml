@model ChessBurgas64.Web.ViewModels.ViewComponents.CreateAnnouncementInputModel
@{ 
    this.ViewData["Title"] = "Създаване на новина";
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title">Заглавие</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <vc:categories title="CategoryId"></vc:categories>
    <div class="form-group">
        <label asp-for="Images">Текст</label>
        <input asp-for="Images" class="form-control"/>
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text">Текст</label>
        <textarea asp-for="Text" class="form-control" rows="30"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <button type="submit" class="btn-danger">Създай</button>
</form>
