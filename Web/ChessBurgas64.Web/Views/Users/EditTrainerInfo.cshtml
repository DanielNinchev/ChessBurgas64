@model ChessBurgas64.Web.ViewModels.Trainers.TrainerInputModel
@using ChessBurgas64.Common
@{
    ViewData["Title"] = GlobalConstants.EditUsersClubData;
}

<link href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/Trumbowyg-main/dist/plugins/colors/ui/trumbowyg.colors.min.css">

<h1 class="display-5 text-white text-center animated slideInDown">@this.ViewData["Title"]</h1>
<hr class="border border-5 border-white text-white" />

<form method="post" enctype="multipart/form-data" class="mt-5">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label class="text-white" asp-for="@Model.DateOfLastAttendance">@GlobalConstants.LastAttendance</label>
        <input asp-for="@Model.DateOfLastAttendance" class="form-control" />
        <span asp-validation-for="@Model.DateOfLastAttendance" class="text-danger"></span>
    </div>
    <div class="form-group my-3">
        <label class="text-white" asp-for="@Model.ProfilePicture">@GlobalConstants.AddProfilePicture</label>
        <input asp-for="@Model.ProfilePicture" class="form-control" />
        <span asp-validation-for="@Model.ProfilePicture" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label class="text-white" asp-for="UserDescription">@GlobalConstants.Description*</label>
        <textarea id="editor" asp-for="UserDescription" class="form-control"></textarea>
        <span asp-validation-for="UserDescription" class="text-danger"></span>
    </div>
    <div class="text-center">
        <button type="submit" class="btn-primary">@GlobalConstants.Refresh</button>
    </div>
</form>

@section Scripts
{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-main/dist/trumbowyg.min.js"></script>
    <script src="~/lib/Trumbowyg-main/dist/plugins/colors/trumbowyg.colors.min.js"></script>
    <script src="~/lib/Trumbowyg-main/dist/plugins/fontfamily/trumbowyg.fontfamily.min.js"></script>
    <script src="~/lib/Trumbowyg-main/dist/plugins/fontsize/trumbowyg.fontsize.min.js"></script>
    <script src="~/js/textEditorButtons.js"></script>
}