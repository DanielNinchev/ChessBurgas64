@model ChessBurgas64.Web.ViewModels.Puzzles.PuzzleListViewModel
@using ChessBurgas64.Common
@{
    this.ViewData["Title"] = GlobalConstants.PuzzlesNav;
}

<partial name="_PageHeaderContainerPartial" />

<div class="text-center my-5">
    <a asp-action="Search" class="btn btn-primary"><i class="fa-solid fa-magnifying-glass"></i> @GlobalConstants.SearchBtn</a>
</div>

<div class="container-xxl">
    <div class="container">
        <div class="row g-4">
            @if (this.Model.Puzzles != null && this.Model.Puzzles.Count() > 0)
            {
                <partial name="_PuzzlesInCardsPartial" model="@Model" />
                <hr />
                <partial name="_PagingPartial" model="@Model" />
            }
            else
            {
                <p class="display-6 text-white text-center">@GlobalConstants.NoMatchesFound</p>
            }
        </div>
    </div>
</div>